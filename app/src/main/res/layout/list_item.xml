<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBarang"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/tvnamaBarang"
            android:layout_toRightOf="@id/ivBarang"
            android:layout_marginLeft="20dp"
            android:text="Nama Barang"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDeskBarang"
            android:layout_below="@id/tvnamaBarang"
            android:layout_toRightOf="@id/ivBarang"
            android:layout_marginLeft="20dp"
            android:text="Deskripsi Barang"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvHargaBarang"
            android:layout_below="@id/tvDeskBarang"
            android:layout_toRightOf="@id/ivBarang"
            android:layout_marginLeft="20dp"
            android:text="Harga Barang"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>